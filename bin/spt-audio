#!/usr/bin/env python3
"""
Spatelier Audio CLI shortcut.

Convenience script for audio operations.
"""

import sys
import os
from pathlib import Path

# Add the project root to Python path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

# Import and run the audio CLI app
from cli.audio import app

if __name__ == "__main__":
    app()
